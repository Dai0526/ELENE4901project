<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_advanced_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="tianhuafang.project1.AdvancedGame">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/lizard_adv"
        android:id="@+id/liz_adv_btn"
        android:layout_marginEnd="42dp"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/spo_adv_btn" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/sicssor_adv"
        android:id="@+id/sic_adv_btn"
        android:layout_above="@+id/liz_adv_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/spock_adv"
        android:id="@+id/spo_adv_btn"
        android:layout_marginEnd="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/paper_adv_btn" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/rock_adv"
        android:id="@+id/rock_adv_btn"
        android:layout_alignTop="@+id/sic_adv_btn"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/paper_adv"
        android:id="@+id/paper_adv_btn"
        android:layout_marginEnd="12dp"
        android:layout_alignTop="@+id/sic_adv_btn"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/question"
        android:id="@+id/user"
        android:layout_alignTop="@+id/pc"
        android:layout_alignEnd="@+id/paper_adv_btn" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/question"
        android:layout_marginTop="45dp"
        android:id="@+id/pc"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/rock_adv_btn" />

    <TextView
        android:textColor="@color/orange"
        android:text="Player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:textColor="@color/orange"
        android:text="pc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignStart="@+id/pc" />

    <TextView
        android:text="result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/result_text"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_alignTop="@+id/user"
        android:layout_alignEnd="@+id/sic_adv_btn"
        android:layout_marginTop="52dp" />

    <TextView
        android:text="Round#"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:id="@+id/textView5"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:layout_below="@+id/result_text"
        android:layout_toEndOf="@+id/rock_adv_btn" />

    <TextView
        android:text="Win#"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:id="@+id/textView6"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:layout_below="@+id/textView5"
        android:layout_alignStart="@+id/textView5" />

    <TextView
        android:text="Win Rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:id="@+id/textView7"
        android:layout_below="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:textAppearance="@style/TextAppearance.AppCompat.Button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView5"
        android:layout_alignStart="@+id/spo_adv_btn"
        android:id="@+id/numRound"
        android:text="0" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView6"
        android:layout_alignEnd="@+id/numRound"
        android:id="@+id/numWin" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignStart="@+id/numWin"
        android:id="@+id/rate" />

    <Button
        android:text="Reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reset_btn"
        android:layout_alignTop="@+id/numRound"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Rule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/numWin"
        android:layout_alignStart="@+id/reset_btn"
        android:id="@+id/rule_btn" />

</RelativeLayout>
